@model IEnumerable<WebApplication3.Models.ViewModels.MonthlyReportViewModel>
@{
    ViewData["Title"] = "Monthly Report";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="MonthlyReport">
    <div class="form-group">
        <label for="account" class="col-form-label"></label>
        <input type="number" name="account" class="form-control" value=@ViewData["account"] />
    </div>
    <div class="form-group">
        <label for="year" class="col-form-label"></label>
        <input type="number" name="year" class="form-control" value=@ViewData["year"] />
    </div>
    <div class="form-group">
        <input type="submit" value="Show" class="btn btn-primary" />
    </div>
</form>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Account @ViewData["account"] monthly report of year: @ViewData["year"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-primary">
                    <th>
                        Month
                    </th>
                    <th>
                        Account
                    </th>
                    <th>
                        Credit
                    </th>
                    <th>
                        Debit
                    </th>
                    <th>
                        Balance
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.Account)
                        </td>
                        <td class="bg-success">
                            @Html.DisplayFor(Model => item.Credit)
                        </td>
                        <td class="bg-danger">
                            @Html.DisplayFor(Model => item.Debit)
                        </td>
                        <td class="bg-primary">
                            @Html.DisplayFor(Model => item.Balance)
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        Balance:
                    </td>
                    <td>
                        @Model.Sum(obj => obj.Balance).ToString("F2")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


